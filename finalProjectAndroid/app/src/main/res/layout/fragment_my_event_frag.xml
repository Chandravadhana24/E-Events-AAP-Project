<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/google_pixe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/google_pixe"
    tools:context=".my_event_frag">

    <!-- TODO: Update blank fragment layout -->
    <!-- Top_bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="@string/username"
            android:textAppearance="@style/username"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="81dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp"
            android:layout_marginBottom="81dp"
            android:fontFamily="@font/ravi_prakash"
            android:text="@string/evento"
            android:textAppearance="@style/evento" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/symbol"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>


    <!-- No Events -->

    <TextView
        android:id="@+id/my_events"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/my_events"
        android:textAppearance="@style/my_events" />

    <fragment
        android:id="@+id/personal_dash_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.project_addeventsondashboard.Personal_Dashboard_Fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp" />

</FrameLayout>