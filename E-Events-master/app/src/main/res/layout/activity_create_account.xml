<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">


    <TextView
        android:layout_width="440dp"
        android:layout_height="50dp"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#111"
        android:paddingTop="10dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-black"
        android:text="Get started!"
        android:textSize="30dp"
        android:textColor="#111"
        android:gravity="center_horizontal"></TextView>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/importimage"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/image_foreground"
        android:layout_marginTop="115dp"></ImageView>

    <Button
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="229dp"
        android:text="+"
        android:textSize="20dp"
        android:id="@+id/importimagebutton"

        ></Button>

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_action_name_foreground"
        android:hint="Name"


        ></EditText>


    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_action_user_foreground"

        android:hint="Username"></EditText>


    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_action_email_foreground"

        android:hint="Email"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:gravity="left"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:drawableLeft="@drawable/ic_action_pass_foreground"
        android:focusable="true"
        android:inputType="textPassword"
        android:hint="Password"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:id="@+id/result"></TextView>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="480dp"
        android:textSize="22dp"
        android:textColor="#111"
        android:text="Create account"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-black"
        android:id="@+id/createaccount"

        android:background="@color/colorAccent"
        ></Button>

    <TextView
        android:layout_width="360dp"

        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="left"
        android:textStyle="bold|italic"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="30dp"
        android:text="By signing up you agree to the terms of service and privacy policy"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Remember me"
        android:layout_marginTop="430dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorAccent"
        android:id="@+id/rememberme"
        android:layout_marginLeft="270dp"></TextView>
</RelativeLayout>